{
    "manifest_version": 2,
    "name": "Tab Background Colour Changer",
    "short_name": "Background Changer",
    "version": "1.0",

    "description" : "Extension to change the tab's background-colour to a user specified one.",
    
    "browser_action": {
        "default_title": "Click to apply background-colour change"
    },
    
    "background": {
        "scripts": ["background.js"]
    },
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "permissions": [
        "activeTab",
        "storage"
    ]
}