{
    "manifest_version": 2,
    "name": "Tab Background Colour Changer",
    "short_name": "Background Changer",
    "version": "1.0",

    "description" : "Extension to change the tab's background-colour to a user specified one.",
    
    "icons":{
        "128": "images/icon-128.png",
        "48": "images/icon-48.png",
        "16": "images/icon-16.png"
    },
    "browser_action": {
        "default_icon": {                    
            "128": "images/icon-128.png",
            "48": "images/icon-48.png",
            "16": "images/icon-16.png"
          },
        "default_title": "Click to apply background-colour change"
    },
    
    "background": {
        "scripts": ["background.js"]
    },
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "permissions": [
        "activeTab",
        "storage"
    ]
}